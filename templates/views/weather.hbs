<!DOCTYPE html>
<html lang="en">

<head>
  {{>headerlinks}}
</head>

<body>
  <!-- main menu section-->
  {{>navbar}}

  <!-- main header -->
  <div class="container-fluid main-header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="main-content">
          <form action="" class="temp-form">
            <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
            <input type="submit" value="search" id="submitBtn">
          </form>
        </div>

        <div class="tempInformation">
          <div class="top-layer">
            <p id="day">TUESDAY</p>
            {{!-- <p id="today-data">13 APRIL</p> --}}
          </div>
          <div class="main-layer">
            <p id="city-name">
              Get Details Here
            </p>
            <div class="middle-layer data-hide">
              <p id="temp"><span id="temp-real-val">0</span> <sup>O</sup> C</p>
              <p id="temp-status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- footer section -->
  {{>footer}}

  <script src="js/main.js"></script>
  <script>
    const getCurrentDay = () => {
      let weekday = new Array(7);
      weekday[0] = "Sunday";
      weekday[1] = "Monday";
      weekday[2] = "Tuesday";
      weekday[3] = "Wednesday";
      weekday[4] = "Thursday";
      weekday[5] = "Friday";
      weekday[6] = "Saturday";

      let currentTime = new Date();
      let days = weekday[currentTime.getDay()];
      const day = document.getElementById('day');

      day.innerText = days;
    }

    const getCurrentTime = () => {
      var months = ["Jan", "Feb", "Mar", "Apr", "May", "June", "July", "Aug", "Oct", "Nov", "Dec",];

      var now = new Date();
      var hours = now.getHours();
      var mins = now.getMinutes();

      var month = months[now.getMonth() + 1];
      var date = now.getDate();

      var period = "am";
      if (hours > 11) {
        period = "pm";
        if (hours > 12) hours -= 12;
      }
      if (mins < 10) {
        mins = "0" + mins;
      }

      let todayData = document.getElementById("today-data")
      todayData.innerText = `${month}, ${date} || ${hours}:${mins} ${period}`
    }

    getCurrentDay();
  </script>
</body>

</html>